@using Clickxys.Components.Modals

@inject IDialogService DialogService

<MudNavMenu>
    <MudNavLink Href="/" Match="NavLinkMatch.All">Click</MudNavLink>
    <MudNavLink OnClick="OpenUpgradesModal" Match="NavLinkMatch.Prefix">Upgrades</MudNavLink>
    <MudNavLink Href="/about" Match="NavLinkMatch.Prefix">About</MudNavLink>
</MudNavMenu>

@code {

    public void OpenUpgradesModal()
    {
        var options = new DialogOptions { CloseOnEscapeKey = true };
        DialogService.Show<UpgradeComponentModal>("Upgrades", options);
    }
} 